.footer.section.section-primary
  .container
    .row.footer-contact
      .col-md-4.col-md-offset-4
        p.footer-label Contact us
        div 
          a(href="https://www.facebook.com/TorontoOrienteeringClub/")
            i.fa.fa-2x.fa-fw.fa-facebook.text-inverse
          a(href="mailto:info@torontoorienteering.com")
            i.fa.fa-2x.fa-fw.fa-envelope.text-inverse
    .row.hidden(id="subscribeMessageSuccess") 
      .col-md-6.col-md-offset-3
        p.subscribe-message.text-success Thank you for subscribing to our newsletter!
    .row.hidden(id="subscribeMessageError") 
      .col-md-6.col-md-offset-3
        p.subscribe-message.text-danger There was an error subscribing to our newsletter. Please  
          a(href="mailto:info@totontoorienteering.com") contact us.             
    .row.border-bottom
      .col-md-6.col-md-offset-3
        p.footer-label Subscribe to our newsletter
        //http://link.whc.ca/s/1/1f4cd08eeaa588ca7f0dbad19cc46953
        //form(role="form" data-toggle="validator" name="io_name" action="" method="get" accept-charset="UTF-8")  
        form(method="post" id="subscribeForm")
          input(type='hidden', name='action', value='subscribe')
          .form-group(class=validationErrors.email ? 'has-error' : null)
            .input-group
              input(type='email' id="email" placeholder="Enter your email" name='email' value=formData.email required).form-control
              span.input-group-btn
                  button(type="submit").btn.btn-primary Subscribe      
    .row.footer-links
      .col-md-3
        h4 Events
        ul
          li <a href='/events#tab1'>!{year} Event Schedule</a>
          li <a href='/events#tab2'>Weekly Park Series</a>
      .col-md-3
        h4 Services
        ul
          li <a href='/services#tab1'>Beginners Clinic</a>
          li <a href='/services#tab2'>Advanced Clinics</a>
          li <a href='/services#tab3'>Team Building</a>  
          li <a href='/services#tab4'>Orienteering for Schools</a>
      .col-md-3
        h4 News
        ul
          li <a href='/blog'>All News</a>
      .col-md-3
        h4 About
        ul
          li <a href='/about#tab1'>Board of Directors</a>
          li <a href='/about#tab2'>Orienteering Links</a>    

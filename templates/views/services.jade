include ../mixins/content-posts
extends ../layouts/default

block sub-header
	.mdl-layout__tab-bar.mdl-js-ripple-effect
		a(href="#tab1").mdl-layout__tab.is-active Beginner Clinics
		a(href="#tab2").mdl-layout__tab Advanced Clinics
		a(href="#tab3").mdl-layout__tab Team Building
		a(href="#tab4").mdl-layout__tab School Events	
			
block content
	main.mdl-layout__content
		section.mdl-layout__tab-panel.is-active(id="tab1")
			+content-post(data.beginnersClinicContent)
		section.mdl-layout__tab-panel(id="tab2")
			+content-post(data.advancedClinicContent)
		section.mdl-layout__tab-panel(id="tab3")
			+content-post(data.teamBuildingContent)
		section.mdl-layout__tab-panel(id="tab4")
			+content-post(data.schoolEventsContent)

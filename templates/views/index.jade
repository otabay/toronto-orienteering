extends ../layouts/default

block header-image
	include ../includes/layouts/header_image

mixin serviceCard(service)
	.col-md-6.service-card
		.h3 !{service.friendlyTitle}
		p.lead !{service.content.brief}
		.btn-group
			a(href="/services#"+service.slug).btn.btn-primary Learn More!

mixin eventCard(event, actionTitle, titlePath, hasBorder)
	if event
		div(class="#{ hasBorder? 'col-md-6 border-right' : 'col-md-6' }") 
			.event-header
				.event-title.pull-left
					p !{event.title}
				if event.startDate
						.event-date.pull-right 
							p !{event._.startDate.format('MMM, Do')}
			.event-brief
				p !{event.content.brief}		
			if event.location
				.card-location
					span.icon.icon-location 
						a(href=event.location.locationMapUrl target="_blank") !{event.location.name}
			.btn-group
				a(href='/events/event/' + event.slug).btn.btn-primary More Info
				if(event.registrationLink)
					a(href=event.registrationLink target="_blank").btn.btn-primary= actionTitle

mixin newsCard(event, titlePath)
	if event
		.col-md-12 
			.event-header
				.event-title.pull-left
					p !{event.title}
				if event.publishedDate
						.event-date.pull-right 
							p !{event._.publishedDate.format('MMM, Do')}
			.news-brief
				p !{event.content.brief}		
			.btn-group
				a(href= titlePath + event.slug).btn.btn-primary.news-btn More Info


block content
	.section.events-news-section
		.container
			.row
				.col-md-8
					h2.section-title Events
						span.icon-title
					.row
						+eventCard(data.event, "Sign me up!", "/events/event/", true)
						+eventCard(data.weeklySeriesEvent, "Sign me up!", "/events/event/", false)
				.col-md-4.news-col
					h2.section-title News
						span.icon-title
					.row
						+newsCard(data.news, "'/blog/post/'")				
	.section.discover-section
		.container
			.row
				.col-md-6.discover-text
					h1 Discover Orienteering
					p Orienteering, in the classical sense, is “cross-country running using a map and a compass.” Often called “cunning running” or “adventure running”, this is a thinking sport where you have to navigate a preset course of “control” locations in a park or forest using only your map, compass and your wits.
				.col-md-6.discover-image
					img(src='/images/header.jpg').img-responsive
	.section
		.container
			h2.section-title How can we help?
					span.icon-title
			.row																
				each service in data.servicesContent
					+serviceCard(service)				

